@model IEnumerable<AnjaliMISDAL.LOC_State>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12">
    <!-- BEGIN PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bar-chart font-green-sharp hide"></i>
                <span class="caption-subject font-green-sharp bold uppercase">State</span>
                @*<span class="caption-helper">weekly stats...</span>*@
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided" data-toggle="buttons">
                    @Html.ActionLink("Create New", "Create",
                  new { controller = "LOC_Country" },
                  new { @class = "btn btn-transparent grey-salsa btn-circle btn-sm active" })
                    @*<label class="btn btn-transparent grey-salsa btn-circle btn-sm active">
                            @Html.ActionLink("Create New", "Create", new { @class = "btn btn-transparent grey-salsa btn-circle btn-sm active" })
                        </label>*@
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-advance table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StateName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Modified)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LOC_Country.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SEC_User.UserName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modified)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOC_Country.CountryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SEC_User.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.StateID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.StateID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.StateID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PORTLET-->
    @section scripts {
        @*@Scripts.Render("https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js")
            <script>

                $(document).ready(function () {
                    $('#myTable').DataTable();
                });
            </script>*@
    }
</div>